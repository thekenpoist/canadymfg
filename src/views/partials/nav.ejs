<header class="border-b">
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
    <div class="font-semibold text-lg">
      <% if (showHomeLink) { %>
        <a href="/">Canady Manufacturing Co.</a>
      <% } else { %>
        Canady Manufacturing Co.
      <% } %>
    </div>

    <!-- Hamburger (mobile) -->
    <button
      id="navToggle"
      class="md:hidden inline-flex items-center justify-center w-11 h-11 border rounded"
      aria-label="Open menu"
      aria-expanded="false"
      aria-controls="mobileNav"
      type="button"
    >
      <span class="sr-only">Menu</span>

      <!-- Hamburger icon -->
      <span id="iconHamburger" class="inline-block" aria-hidden="true">
        <span class="block w-5 h-0.5 bg-slate-900"></span>
        <span class="block w-5 h-0.5 bg-slate-900 my-1"></span>
        <span class="block w-5 h-0.5 bg-slate-900"></span>
      </span>

      <!-- X icon -->
      <span id="iconClose" class="hidden text-xl leading-none text-slate-900" aria-hidden="true">
        Ã—
      </span>
    </button>

    <!-- Desktop nav -->
    <nav class="hidden md:flex space-x-6 text-sm font-medium">
      <a href="/capabilities" class="hover:underline">Capabilities</a>
      <a href="/quality" class="hover:underline">Quality</a>
      <a href="/about" class="hover:underline">About</a>
      <a href="/careers" class="hover:underline">Careers</a>
      <a href="/contact" class="px-4 py-2 border rounded hover:bg-slate-100">
        Contact / RFQ
      </a>
    </nav>
  </div>

  <!-- Mobile nav panel -->
  <nav id="mobileNav" class="md:hidden hidden border-t">
    <div class="max-w-7xl mx-auto px-4 py-4 flex flex-col gap-3 text-sm">
      <a href="/capabilities" class="py-2">Capabilities</a>
      <a href="/quality" class="py-2">Quality</a>
      <a href="/about" class="py-2">About</a>
      <a href="/careers" class="py-2">Careers</a>
      <a href="/contact" class="py-2 font-semibold">Contact / RFQ</a>
    </div>
  </nav>
</header>
